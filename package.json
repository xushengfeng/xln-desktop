{
    "name": "xlinkote",
    "version": "1.0.0",
    "description": "xlinkote 桌面客户端",
    "main": "./out/main/main.js",
    "scripts": {
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder -p never",
        "start": "electron-vite --ignoreConfigWarning preview",
        "dev": "electron-vite --ignoreConfigWarning dev",
        "build": "electron-vite --ignoreConfigWarning build"
    },
    "author": {
        "name": "xsf",
        "email": "xushengfeng_zg@163.com"
    },
    "homepage": "https://github.com/xushengfeng/xln-desktop/",
    "license": "GPL-3.0",
    "dependencies": {
        "cors-anywhere": "^0.4.4",
        "electron-store": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "^18.8.4",
        "electron": "^22.0.1",
        "electron-builder": "^23.6.0",
        "electron-vite": "^1.0.16",
        "typescript": "^4.9.4",
        "vite": "^4.0.4"
    },
    "build": {
        "appId": "com.xlinkote.app",
        "directories": {
            "output": "build"
        },
        "compression": "maximum",
        "icon": "./assets/logo",
        "electronDownload": {
            "mirror": "https://npmmirror.com/mirrors/electron/"
        },
        "npmRebuild": false,
        "fileAssociations": [],
        "asar": false,
        "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
        "linux": {
            "category": "Utility",
            "target": [
                "tar.gz",
                "deb",
                "rpm",
                "AppImage"
            ]
        },
        "win": {
            "icon": "./assets/logo/icon.ico",
            "target": [
                "nsis",
                "zip"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
